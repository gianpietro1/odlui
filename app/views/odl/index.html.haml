#vars.invisible
	.var_nodes
		= @topo_nodes
	.var_links
		= @topo_links

.container
	= render partial: 'home/header'

	.row
		%script{:type=>"text/javascript"}

			topologyData = {
			nodes: JSON.parse($(".var_nodes").text()),
			links: JSON.parse($(".var_links").text())
			};
			
		#topology
			.topology-title.clearfix
				.pull-left
					Topology
				.pull-right
					%button{class:'btn btn-success save_positions'}
						Save positions
			
	.row
		%h1
			Nodes

		%table.table.table-striped.table-bordered.table-condensed.text-center.margin-top-10
			%thead
				%tr
					%th.text-center
						\#
					%th.text-center
						Device
			%tbody
				- if @nodes
					- i = 0
					- @nodes.map do |node|
						- i += 1
						%tr
							%td
								= i
							%td{id: node["id"].to_i}
								= node["node_id"]

		.positions
